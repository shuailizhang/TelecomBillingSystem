<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:id="@+id/number_tv" android:textSize="15dp" android:textColor="#242424" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/type_tv" android:textSize="15dp" android:textColor="#242424" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/duration_tv" android:textSize="15dp" android:textColor="#242424" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/expense_tv" android:textSize="15dp" android:textColor="#242424" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>

</LinearLayout>